<h1>You're in tasks --> index view!</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <span><%= task.completed? ? "☑️" : "☐" %></span>
    <span><%= task.title %></span>
    <span><%= link_to "(view)", task_path(task.id) %></span>
    <span><%= link_to "(edit)", edit_task_path(task.id) %></span>
  </li>
  <% end %>
  </ul>
  <%= link_to "Add a new task?", tasks_new_path %>
